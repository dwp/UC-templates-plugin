{
  "meta": {
    "description": "This plugin provides page templates for UC agents and claimants."
  },
  "nunjucksPaths": ["/views"],
  "sass": ["/styles.scss"],
  "pluginDependencies": [
    {
      "packageName": "@dwp/frontend",
      "minVersion": "3.3.0"
    }
  ],
  "templates": [
    {
      "name": "UC agent layout",
      "path": "/views/layouts/uc-agent.njk",
      "type": "nunjucks"
    },
    {
      "name": "UC claimant layout",
      "path": "/views/layouts/uc-claimant.njk",
      "type": "nunjucks"
    },
    {
      "name": "Agent - Find a claimant",
      "path": "/views/agent/find-a-claimant.njk",
      "type": "nunjucks"
    },
    {
      "name": "Citizen - Confirm your email",
      "path": "/views/claimant/confirm-your-email.njk",
      "type": "nunjucks"
    },
    {
      "name": "Citizen - Home screen",
      "path": "/views/claimant/home.njk",
      "type": "nunjucks"
    },
    {
      "name": "Citizen - To-do",
      "path": "/views/claimant/to-do.njk",
      "type": "nunjucks"
    }
  ]
}
